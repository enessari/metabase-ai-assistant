{
  "name": "metabase-ai-assistant",
  "version": "1.0.0",
  "description": "MCP Server for Metabase AI Assistant - Connects Claude Desktop/Code to Metabase and PostgreSQL databases",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "mcp": "node src/mcp/server.js",
    "mcp:server": "node src/mcp/server.js",
    "mcp:prod": "NODE_ENV=production node src/mcp/server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop metabase-ai-mcp",
    "pm2:restart": "pm2 restart metabase-ai-mcp",
    "pm2:logs": "pm2 logs metabase-ai-mcp",
    "docker:build": "docker build -t metabase-ai-mcp .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f metabase-ai-mcp",
    "test": "jest",
    "test:connection": "node src/mcp/server.js --test-connection",
    "lint": "eslint src/**/*.js"
  },
  "bin": {
    "metabase-ai-mcp": "./src/mcp/server.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "claude-desktop",
    "claude-code",
    "metabase",
    "ai",
    "database",
    "postgresql",
    "dashboard",
    "analytics",
    "sql",
    "anthropic"
  ],
  "author": "ONMARTECH LLC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/onmartech/metabase-ai-assistant.git"
  },
  "homepage": "https://github.com/onmartech/metabase-ai-assistant#readme",
  "bugs": {
    "url": "https://github.com/onmartech/metabase-ai-assistant/issues"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.0",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "axios": "^1.6.5",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "inquirer": "^12.9.3",
    "mysql2": "^3.14.3",
    "openai": "^4.26.0",
    "ora": "^8.0.1",
    "pg": "^8.16.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "eslint": "^8.56.0",
    "jest": "^29.7.0"
  }
}
